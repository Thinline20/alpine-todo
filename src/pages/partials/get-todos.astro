---
export const partial = true;

import { $todos } from "~/atoms/todos-atom";
import Todo from "~/components/Todo.astro";
---

<div
  class="3xl:grid-cols-5 4xl:grid-cols-6 grid gap-x-4 gap-y-8 px-4 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 xl:px-8 2xl:grid-cols-4"
  id="todo-list"
>
  {$todos.get().map((todo) => <Todo todo={todo} />)}
</div>
